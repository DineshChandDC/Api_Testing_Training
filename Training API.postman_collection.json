						"exec": [
							"pm.test(\"Check Apple Watch Series 8 exists\", function () {\r",
							"    let jsonData = pm.response.json();\r",
							"    let item = jsonData.find(x => x.name === \"Apple Watch Series 8\");\r",
							"    pm.expect(item).to.not.be.undefined;\r",
							"});\r",
							"\r",
							"pm.test(\"id property should be equal to 8\", function () {\r",
							"    const response = pm.response.json();\r",
							"    const item = response.find(x => x.id === \"8\");\r",
							"    pm.expect(item).to.not.be.undefined;\r",
							"});\r",
							"\r",
							"pm.test(\"response has 'content-type' header\", function () {\r",
							"    const present = pm.response.headers.get('Content-Type');\r",
							"    console.log(present);\r",
							"    //pm.expect(present).to.be.true;\r",
							"});\r",
							"\r",
							"pm.test(\"Response has no cookies\", function () {\r",
							"    const cookies = pm.cookies.toObject();\r",
							"    pm.expect(Object.keys(cookies).length).to.equal(0);\r",
							"});\r",
							"\r",
							"pm.test(\"Check if color Red exists\", function () {\r",
							"    let response = pm.response.json();\r",
							"\r",
							"    for (let item of response) {\r",
							"        if (item.data && item.data.Color === \"Red\") {\r",
							"            found = true;\r",
							"        }\r",
							"    }\r",
							"    pm.expect(found).to.be.true;\r",
							"});\r",
							"\r",
							"pm.test(\"Total number of records\", function () {\r",
							"    let response = pm.response.json();   // Convert response to JSON\r",
							"    let total = response.length;         // Count items in the array\r",
							"\r",
							"    console.log(\"Total records:\", total); // Print in console\r",
							"});"
