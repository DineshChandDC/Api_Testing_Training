		{
			"name": "Test_GETCartTotalsValidationforAllCarts",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Validate totalQuantity for all carts\", function () {\r",
							"    let jsonData = pm.response.json();\r",
							"\r",
							"    // Loop through each cart\r",
							"    jsonData.carts.forEach(cart => {\r",
							"        // Calculate sum of product quantities\r",
							"        let sumQty = cart.products.reduce((acc, p) => acc + p.quantity, 0);\r",
							"\r",
							"        // Assert that totalQuantity matches sum of product quantities\r",
							"        pm.expect(cart.totalQuantity).to.eql(sumQty);\r",
							"    });\r",
							"});\r",
							"\r",
							"pm.test(\"Validate product totals for all carts\", function () {\r",
							"    let jsonData = pm.response.json();\r",
							"\r",
							"    // Loop through each cart\r",
							"    jsonData.carts.forEach(cart => {\r",
							"        cart.products.forEach(p => {\r",
							"            // Assert that product total = price * quantity\r",
							"            pm.expect(p.total).to.eql(p.price * p.quantity);\r",
							"        });\r",
							"    });\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": "https://dummyjson.com/carts"
			},
			"response": []
		},
